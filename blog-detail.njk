---
pagination:
  data: blogs
  size: 1
  alias: post
eleventyComputed:
  permalink: "{{ post.url }}"
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ post.title }}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=DM+Serif+Display&family=Fira+Code&display=swap"
    rel="stylesheet" />

  <link rel="stylesheet" href="/styles.css" />
  <script src="/script.js" defer></script>
</head>

<body data-page="blogs">
  <header class="site-header">
    <div class="container header-inner">
      <div class="brand">
        <img src="/images/gen-img-02.png" alt="Site Logo" class="brand-logo" />
        <span class="brand-text">Robotics <span>Notebook</span></span>
      </div>

      <nav class="simple-nav">
        <a href="/" class="nav-item">Home</a>
        <a href="/blog/" class="nav-item">Blogs</a>
        <a href="/tutorials/" class="nav-item">Tutorials</a>
      </nav>
    </div>
  </header>

  <main class="main">
    <section class="page-header">
      <div class="container">
        <p class="breadcrumb">
          <a href="/blog/">← Back to Blogs</a>
        </p>
        <h1 class="page-title">{{ post.title }}</h1>
        <p class="page-subtitle">
          {{ post.type }} • {{ post.tag }} • {{ post.date }}
        </p>
      </div>
    </section>

    <section class="section">
      <div class="container blog-detail">
        <article class="blog-article">
          <div class="blog-content">
            <p>{{ post.description }}</p>

            {% if post.imageUrl %}
              <figure class="blog-figure">
                <img src="{{ post.imageUrl }}" alt="{{ post.title }}" />
                <figcaption>
                  Placeholder image – replace URL in blogs.json with your real photo.
                </figcaption>
              </figure>
            {% endif %}

            {% if post.videoId %}
              <h2 class="detail-heading">Demo video</h2>
              <div class="video-wrapper">
                <iframe
                  src="https://www.youtube.com/embed/{{ post.videoId }}"
                  title="{{ post.title }} video"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen></iframe>
              </div>
            {% endif %}

            {% if post.code %}
              <h2 class="detail-heading">Code snippet</h2>
              <p>Click below to show or hide the code snippet.</p>

              <button class="btn-outline toggle-code-btn" data-target="code-{{ post.id }}">
                Show code snippet
              </button>

              <pre id="code-{{ post.id }}" class="code-block is-hidden"><code>{{ post.code | safe }}</code></pre>
            {% endif %}
          </div>
        </article>
      </div>
    </section>
  </main>

  <footer class="site-footer">
    <div class="container footer-inner">
      <p>{{ post.title }} – full details.</p>
    </div>
  </footer>
</body>
</html>
